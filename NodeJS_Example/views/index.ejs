<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width">
<title>Assignment2 - Pizza Order with DB</title>
<link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>

<ul>
<li class="active"><a href="/">Order</a></li>
<li><a href="/ordersList">Orders List</a></li>
</ul>

<br>

<h2><%= title %></h2>
<form id="orderForm" method="POST">

<input type="number" id="quantity" min="1" max="10" value="1"/>
<% menuList.options.forEach(function(item){ %>
    <h3><%= item.id %></h3>
     
        <% if(item.id === "Size"){ %>
           <% item.choice.forEach(function(i){ %>
           <% var s = i.sz; %>
           <% var c = i.cost; %>
            <input type="radio"  name="size" id="<%= s %>" value="<%= c %>"  required/> <%= s %>  $<%= c %>.00<br>

        <% })}else if(item.id === "Crust Type"){ %>
            <% item.choice.forEach(function(i){ %>
            <input type="radio" name="crust" value="<%= i %>"  required/> <%= i %><br>

        <% })}else{ %>
            <% item.choice.forEach(function(i){ %>
            <input type="checkbox" name="toppings" value="<%= i %>"  /> <%= i %><br>
        <% })} %>

<% }); %>

<br>
Phone Number: <input id="phone" type="tel" pattern="^\d{3}-\d{3}-\d{4}$" name="phone" placeholder="XXX-XXX-XXXX" required /><br>
Address: <input id="address" type="textarea" name="address" required /><br>

<br>
<input type="submit" name="submit" value="Submit"/>
</form>
<br>

</body>
<script src="https://code.jquery.com/jquery-1.11.2.min.js"></script>
<script src="javascripts/index.js"></script>
</html>